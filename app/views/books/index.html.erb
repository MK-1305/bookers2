<div class="container">
	<div class="row">
		<%= render 'layouts/template', user: current_user, book: @book %>

		<div class="col-xs-9">
			<table class="table-striped">
				<h1>Books</h1>
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
					</tr>
				</thead>
				<tbody>
					<% @books.each do |book| %>
						<tr>
							<td>
								<%= link_to (book.user) do %>
									<%= attachment_image_tag book.user, :profile_image, size:"60x60", format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "noimage.jpg" %>
								<% end %>
							</td>
							<td>
								<%= link_to book_path(book.id) do %>
									<%= book.title %>
								<% end %>
							</td>
							<td>
								<%= book.body %>
							</td>
						</tr>
						<td>
						</td>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>
