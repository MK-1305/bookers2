<h1>Editing Book</h1>
<p id="notice"><%= notice %></p>

<%= form_for(@book) do |f| %>

    <div class="form-group has-icon">
        <label class="control-label sr-only" for="inputEmail">Title</label>
        <h4>Title</h4>
        <%= f.text_field :title, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"タイトルを入力してください"%>
        <span class="fa fa-user form-control-icon" aria-hidden="true"></span>
    </div>

    <div class="form-group has-icon">
        <label class="control-label sr-only" for="inputEmail">Opinion</label>
        <h4>Opinion</h4>
        <%= f.text_field :body, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"本文を入力してください"%>
        <span class="fa fa-user form-control-icon" aria-hidden="true"></span>
    </div>

        <%= f.submit "Update Book", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
    <%= link_to "Show", book_path %>
    <%= link_to "Back", books_path %>
<% end %>