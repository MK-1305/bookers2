
<div class="container">
	<div class="row">
		<%= render 'layouts/template', user: current_user, book: @book %>

		<div class="col-xs-9">
			<table class="table table-striped">
				<h1>Book detail</h1>
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>

					</tr>
				</thead>
				<tbody>
					<tr>
						<td>
							<%= link_to user_path(@book.user) do %>
							<%= attachment_image_tag @book.user, :profile_image, size:"60x60", format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "noimage.jpg" %>
							<% end %>
						</td>
						<td>
							<%= @book.title %>
						</td>
						<td>
							<%= @book.body %>
						</td>
						<td>
							<% if @book.user.id == current_user.id %>
							<%= link_to "Edit",edit_book_path(@book.id) %>
						</td>
						<td>
							<%= link_to "Destroy",book_path(@book.id), method: :delete, data: {confirm: "Are you sure?"} %>
							<% end %>
						</td>
					</tr>
						<td>
							<%= link_to user_path(@book.user) do %>
							<%= @book.user.name %>
							<% end %>
						</td>
				</tbody>
			</table>
		</div>
	</div>
</div>

