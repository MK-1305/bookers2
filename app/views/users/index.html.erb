<div class="container">
	<div class="row">
		<%= render 'layouts/template', user: current_user, book: @book %>

		<div class="col-xs-9">
			<table class="table table-striped">
				<h1>Users</h1>
				<thead>
					<tr>
						<th>image</th>
						<th>name</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% @users.each do |user| %>
						<tr>
							<td>
								<%= attachment_image_tag user, :profile_image, size:"60x60", format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "noimage.jpg" %>
							</td>
							<td>
							<%= user.name %>
							</td>
							<td>
							<%= link_to 'Show', user_path(user.id) %>
							</td>
						</tr>
							<td>
							</td>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>
